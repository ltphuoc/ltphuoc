{
  // Editor
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.fontFamily": "Fira Code, JetBrains Mono, Source Code Pro, SF Mono, Roboto Mono, Arial",
  "editor.fontWeight": "normal",
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": true,
  "editor.hover.enabled": true,
  "editor.renderControlCharacters": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrapColumn": 120,
  "editor.lineHeight": 30,
  "editor.cursorBlinking": "expand",
  "editor.suggest.preview": true,
  "editor.dragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.wordWrap": "bounded",
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "none",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.linkedEditing": true,
  "editor.stickyScroll.enabled": true,

  // Terminal
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.fontFamily": "'MesloLGM NF'",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // JavaScript and TypeScript Inlay Hints Settings
  "javascript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.enumMemberValues.enabled": true,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "javascript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.paths": false,
  "javascript.suggest.paths": false,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.suggest.completeFunctionCalls": true,

  // Workbench & UI Theme
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "bearded-icons",

  // File Management
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
    // "**/node_modules": true
  },

  // Explorer
  "explorer.compactFolders": false,
  "explorer.confirmDelete": true,

  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "vue-html": "html"
  },

  // OTHERS
  "security.workspace.trust.untrustedFiles": "open",
  "window.newWindowDimensions": "maximized",
  "settingsSync.ignoredSettings": ["editor.fontSize", "editor.inlayHints.fontSize"],

  // EXTENSIONS
  // Git
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true
  },
  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "markdown-preview-enhanced.liveUpdate": false,
  // Github copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true,
    "typescriptreact": true,
    "typescript": true,
    "javascriptreact": true
  },
  // Thunder Client
  "thunder-client.codeSnippetLanguage": "cs-httpclient",
  // Html
  "htmltagwrap.tag": " ",
  "htmltagwrap.autoDeselectClosingTag": true,

  "auto-close-tag.insertSpaceBeforeSelfClosingTag": true,

  "template-string-converter.autoRemoveTemplateString": true,

  "liveServer.settings.donotShowInfoMsg": true,
  // React snippet
  "reactSnippets.settings.importReactOnTop": false,
  "reactSnippets.settings.prettierEnabled": true,
  // Flutter - Dart
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.previewFlutterUiGuides": true,
  // Error lens
  "errorLens.fontSize": "12",
  "errorLens.fontStyleItalic": true,
  "errorLens.gutterIconSize": "auto",
  "errorLens.fontWeight": "500",
  "errorLens.padding": "6px",
  "errorLens.borderRadius": "4px",
  "errorLens.statusBarMessageType": "closestSeverity",
  "errorLens.statusBarCommand": "goToLine",
  "errorLens.statusBarIconsEnabled": true,
  "errorLens.statusBarColorsEnabled": true,
  "errorLens.statusBarMessageEnabled": true,
  "errorLens.messageBackgroundMode": "message",
  "errorLens.gutterIconsEnabled": true,
  // Prettier
  "prettier.printWidth": 120,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  // Turbo ConsoleLog
  "turboConsoleLog.insertEmptyLineAfterLogMessage": true,
  "turboConsoleLog.quote": "`",
  "turboConsoleLog.logMessagePrefix": "",
  "turboConsoleLog.insertEmptyLineBeforeLogMessage": true,
  // Code Spell Checker
  "cSpell.language": "en,vi",
  "cSpell.userWords": ["clsx", "roboto"],
  // Console Ninja
  "console-ninja.featureSet": "Community",
  "console-ninja.toolsToEnableSupportAutomaticallyFor": {
    "live-server-extension": true
  }
}
